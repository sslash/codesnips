<!doctype html>
<html lang="en" ng-app="codesnipzApp">
<head>
    <meta charset="utf-8">

    <!-- Use the .htaccess and remove these lines to avoid edge case issues.
    More info: h5bp.com/i/378 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Codesnips</title>
    <meta name="description" content="Codesnips">

    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">

    <link rel="stylesheet" href="css/desktop-result.css"/>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    
</head>
<body>
    <div ng-controller="MainCtrl" ng-init="init()">
        <section id="modal-area" ng-include src="'/partials/loginModal.html'" ng-show="showLogin">
        </section>

        <header data-role="header">
            <nav>
                <ul>
                    <li><a href="#/add/">Add</a></li>
                    <li><a href="#/library/">Library</a></li>
                    <li><a href="#">Search</a></li>
                    <li><a href="#">List</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>

                </ul>

                <section id="login-area">
                    <i class="fa fa-user fa-5x" ng-click="openLoginClicked()" ng-hide="modal.showAvatar"></i>
                    <div ng-click="openLoginClicked()" ng-show="modal.showAvatar"> <img id = "profil-picture" src="{{user.gravatar}}"></div>
                    <p ng-click="openLoginClicked()" class="lead" ng-hide="modal.showAvatar">Login</p>
                    <p ng-click="logOff()" ng-show="modal.showAvatar" class="lead"> Log off </p>
                </section>
            </nav>
            <footer id="footer">
                <p>Michael. Truls.</p>
            </footer>
        </header>


        <nav id="library-nav">
            <div class="row">
                <div class="col-lg-2">
                    <p><a href="#/"> Codesnippets</a></p>
                </div>
                <div class="col-lg-6">
                    <i class="fa fa-align-justify fa-2x" ng-click="menu()" id="nav-menu-ul" ></i> 
                    <ul  ng-show="libraryBoolean.showMenu">
                        <li > Swag </li>
                        <li > Lol </li>
                        <li > Test </li>
                        <li > Test 2</li>       
                    </ul>
                    <div id="nav-search">
                        <input  type="search" placeholder="Search" ng-model="searchField" ng-keyup="searchFieldKeyUp($event)">
                    </div>
                </div>

                <div class="col-lg-4 add-button-settings">
                    <input id ="add-button" ng-click="addClicked()" class="btn btn-primary" type="submit" value="Add">
                </div>
            </div>
        </nav>

        <div id="main-overlay">
        </div>

        <section id="main" class="container" data-role="content">        
            <div ng-view></div>
        </section>
    </div>

    <script>
    window.user = <%- JSON.stringify(user) %>;
    </script>


    <script src="bower_components/angular/angular.js"></script>
    <script src="bower_components/jquery/jquery.js"></script>
    <script src="bower_components/chosen/public/chosen.jquery.js"></script>

    <!-- build:js scripts/modules.js -->
    <script src="bower_components/angular-resource/angular-resource.js"></script>
    <script src="bower_components/angular-cookies/angular-cookies.js"></script>
    <script src="bower_components/angular-sanitize/angular-sanitize.js"></script>
    <script src="bower_components/angular-route/angular-route.js"></script>
    <!-- endbuild -->

    <!-- build:js({.tmp,app}) scripts/scripts.js -->
    <script src="js/app.js"></script>
    <script src="js/services/CodeSnippet.js"></script>
    <script src="js/services/User.js"></script>
    <script src="js/LibraryCtrl.js"></script>
    <script src="js/HomeCtrl.js"></script>
    <script src="js/MainCtrl.js"></script>
    <script src="js/AddCtrl.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.3/angular.min.js"></script>
    <!-- endbuild -->
</body>
</html>
